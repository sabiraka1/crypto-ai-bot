# Режим: live / paper / backtest
MODE=paper

# Инструмент и таймфрейм по умолчанию
SYMBOL=BTC/USDT
TIMEFRAME=1h

# Путь к БД (создастся автоматически)
DB_PATH=./data/bot.db

# Лимит баров для фич
FEATURE_LIMIT=300

# Веса и пороги решений
DECISION_RULE_WEIGHT=0.7
DECISION_AI_WEIGHT=0.3
SCORE_BUY_MIN=0.6
SCORE_SELL_MIN=0.4
SL_ATR_MULT=1.5
TP_ATR_MULT=2.5

# Риск-пороги
TIME_DRIFT_MAX_MS=1500
MAX_SPREAD_PCT=0.2
TRADING_HOURS_ENABLED=true
TRADING_HOURS_START=00:00
TRADING_HOURS_END=23:59
TRADING_DAYS=1,2,3,4,5
MAX_SEQ_LOSSES=3
MAX_EXPOSURE_PCT=100
MAX_DRAWDOWN_PCT=5

# Включение правил риска
ENABLE_RISK_TIME_SYNC=true
ENABLE_RISK_SPREAD=true
ENABLE_RISK_HOURS=true
ENABLE_RISK_SEQ_LOSSES=true
ENABLE_RISK_MAX_EXPOSURE=true
ENABLE_RISK_DRAWDOWN=true

# Телеграм (опционально)
# TELEGRAM_BOT_TOKEN=123456:ABC...
# TELEGRAM_WEBHOOK_SECRET=some-secret
