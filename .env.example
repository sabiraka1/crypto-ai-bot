# === РЕЖИМ И БИРЖА ===
MODE=paper                     # paper | live
EXCHANGE=gateio
SYMBOL=BTC/USDT                # или используйте список: SYMBOLS=BTC/USDT,ETH/USDT
# SYMBOLS=

# === КЛЮЧИ (выберите ЛЮБОЙ вариант задания) ===
# Прямо в ENV:
API_KEY=
API_SECRET=
# Через файлы:
# API_KEY_FILE=/run/secrets/api_key
# API_SECRET_FILE=/run/secrets/api_secret
# Через base64:
# API_KEY_B64=
# API_SECRET_B64=
# Через JSON-файл с ключами:
# SECRETS_FILE=/run/secrets/crypto_keys.json

# === TELEGRAM (опционально; при пустых значениях — безопасный no-op) ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_SECRET=
TELEGRAM_CHAT_ID=

# === ШИНА СОБЫТИЙ (опционально) ===
# Укажите Redis-URL, чтобы включить durable pub/sub. Иначе будет in-memory.
# Примеры: redis://localhost:6379/0  |  rediss://user:pass@host:port/0
EVENT_BUS_URL=

# === ТОРГОВЛЯ И РИСКИ ===
FIXED_AMOUNT=25
FEE_PCT_ESTIMATE=0.001

RISK_COOLDOWN_SEC=0
RISK_MAX_SPREAD_PCT=0.005
RISK_MAX_POSITION_BASE=0
RISK_MAX_ORDERS_PER_HOUR=10
RISK_DAILY_LOSS_LIMIT_QUOTE=50
RISK_MAX_FEE_PCT=0.002
RISK_MAX_SLIPPAGE_PCT=0.01

# === ИДЕМПОТЕНТНОСТЬ ===
IDEMPOTENCY_BUCKET_MS=60000
IDEMPOTENCY_TTL_SEC=120

# === ИНТЕРВАЛЫ ЦИКЛОВ ===
EVAL_INTERVAL_SEC=3
EXITS_INTERVAL_SEC=5
RECONCILE_INTERVAL_SEC=10
WATCHDOG_INTERVAL_SEC=3
DMS_TIMEOUT_MS=120000

# === ХРАНИЛИЩЕ/СЕРВИС ===
DB_PATH=/data/crypto_ai_bot.db
HTTP_TIMEOUT_SEC=30
LOG_LEVEL=INFO
