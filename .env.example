# ============================
# crypto-ai-bot — .env.example
# (шаблон без секретов; коммитим в репозиторий)
# ============================

# Режим работы
# paper — торговля на бумаге (рекомендуется для начала)
# live  — реальная торговля (включайте только после тестов)
MODE=paper
ENABLE_TRADING=false

# Брокер / биржа (через CCXT)
EXCHANGE=gateio
API_KEY=__PUT_YOUR_KEY_HERE__
API_SECRET=__PUT_YOUR_SECRET_HERE__
CLIENT_ORDER_ID_PREFIX=cai

# Инструмент и таймфрейм
SYMBOL=BTC/USDT
TIMEFRAME=15m
POSITION_SIZE=10

# Исторический горизонт для расчётов/чартов
LIMIT_BARS=300
LOOKBACK_LIMIT=300

# Комиссия и слиппедж (bps — сотые процента)
FEE_BPS=10
SLIPPAGE_BPS=5

# Локальная БД (SQLite). В проде используйте volume и путь /data/bot.sqlite
DB_PATH=./crypto.db

# Ограничение скорости CCXT (локальные «внутрипроцессные» лимиты)
CCXT_LOCAL_RL_CALLS=8
CCXT_LOCAL_RL_WINDOW=1.0

# Публичный адрес сервиса (для ссылок/вебхуков)
PUBLIC_BASE_URL=http://localhost:8000

# Тайминги/наблюдаемость
LOG_LEVEL=INFO
LOG_JSON=false
CONTEXT_HTTP_TIMEOUT_SEC=2.0

# Синхронизация времени (используется в /health)
MAX_TIME_DRIFT_MS=2500
# Список HTTP‑источников времени (через запятую)
TIME_DRIFT_URLS=https://worldtimeapi.org/api/timezone/Etc/UTC,https://worldtimeapi.org/api/ip

# Telegram (опционально)
TELEGRAM_BOT_TOKEN=__PUT_TOKEN_HERE__
TELEGRAM_WEBHOOK_SECRET=__PUT_SECRET_HERE__

# Оркестратор (опционально, если используется в вашей сборке)
TICK_PERIOD_SEC=60
PERF_BUDGET_FLOW_P99_MS=0
PERF_BUDGET_DECISION_P99_MS=0
PERF_BUDGET_ORDER_P99_MS=0

# Таймзона контейнера/процесса
TZ=Europe/Istanbul
