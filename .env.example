# ========= Core runtime =========
MODE=paper                 # live | paper | backtest
SYMBOL=BTC/USDT
TIMEFRAME=1h
ENABLE_TRADING=false       # true to allow /orders/*
DEFAULT_ORDER_SIZE=0.01
DB_PATH=data/bot.sqlite

# ========= Risk / Health =========
IDEMPOTENCY_TTL_SECONDS=300
TIME_DRIFT_LIMIT_MS=1000
HEALTH_TIME_TIMEOUT_S=2.0

# ========= Scoring / Thresholds =========
SCORE_RULE_WEIGHT=0.5
SCORE_AI_WEIGHT=0.5
THRESHOLD_BUY=0.55
THRESHOLD_SELL=0.45

# ========= Event Bus (you can use JSON or k=v;k=v) =========
# JSON form:
# BUS_STRATEGIES={"OrderSubmittedEvent":"drop_oldest","ErrorEvent":"keep_latest"}
# BUS_QUEUE_SIZES={"OrderSubmittedEvent":2000,"ErrorEvent":500}

# k=v;k=v fallback form (default suggested):
BUS_STRATEGIES=OrderSubmittedEvent=drop_oldest;ErrorEvent=keep_latest
BUS_QUEUE_SIZES=OrderSubmittedEvent=2000;ErrorEvent=500
BUS_DLQ_MAX=500

# ========= Integrations (optional) =========
TELEGRAM_BOT_TOKEN=
TELEGRAM_SECRET_TOKEN=

# ========= Debug =========
SAFE_MODE=false           # if true â†’ trading is force-disabled
