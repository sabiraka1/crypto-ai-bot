# ====== Base ======
MODE=paper
SYMBOL=BTC/USDT
TIMEFRAME=1h
LIMIT_BARS=300
DB_PATH=crypto.db

# ====== Broker (paper/live) ======
EXCHANGE=binance
API_KEY=
API_SECRET=
SUBACCOUNT=

# ====== Orchestrator ======
ORCHESTRATOR_AUTOSTART=false
TICK_PERIOD_SEC=60
METRICS_REFRESH_SEC=30
MAINTENANCE_SEC=60

# ====== Risk ======
MAX_POSITIONS=1
MAX_SPREAD_BPS=25
RISK_HOURS_UTC=0-24
RISK_LOOKBACK_DAYS=7
RISK_MAX_DRAWDOWN_PCT=10
RISK_SEQUENCE_WINDOW=3
RISK_MAX_LOSSES=3
TIME_DRIFT_LIMIT_MS=1000
# TIME_DRIFT_URLS can override defaults (comma-separated)

# ====== Performance Budgets (p99, ms) ======
PERF_BUDGET_DECISION_P99_MS=400
PERF_BUDGET_ORDER_P99_MS=750
PERF_BUDGET_FLOW_P99_MS=1500

# ====== Telegram / Alerts ======
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
ALERT_TELEGRAM_CHAT_ID=
ALERT_ON_DLQ=true
ALERT_ON_LATENCY=false
ALERT_DLQ_EVERY_SEC=300

# ====== Market Context ======
CONTEXT_ENABLE=true
CONTEXT_PRESET=off     # off|simple|balanced|custom
CONTEXT_CACHE_TTL_SEC=300
CONTEXT_HTTP_TIMEOUT_SEC=2.0
CONTEXT_BTC_DOMINANCE_URL=https://api.coingecko.com/api/v3/global
CONTEXT_FEAR_GREED_URL=https://api.alternative.me/fng/?limit=1
CONTEXT_DXY_URL=

# ====== Logging ======
LOG_LEVEL=INFO
LOG_JSON=false

# ====== Backtest ======
BACKTEST_METRICS_PATH=backtest_metrics.json
