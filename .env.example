# ============================
# crypto-ai-bot — .env.example (шаблон без секретов)
# ============================

# Режим работы
MODE=paper                  # paper | live
ENABLE_TRADING=false        # в live=true включится реальная торговля

# Биржа / ключи (CCXT)
EXCHANGE=gateio
API_KEY=__PUT_YOUR_KEY_HERE__
API_SECRET=__PUT_YOUR_SECRET_HERE__
CLIENT_ORDER_ID_PREFIX=cai  # префикс для Gate.io client order id (params.text)

# Торговые параметры (spot, long-only)
SYMBOL=BTC/USDT
TIMEFRAME=15m
POSITION_SIZE_USD=10        # размер позиции в USDT на покупку
FEE_TAKER_BPS=10            # комиссия такер (bps)
SLIPPAGE_BPS=20             # бюджет слиппеджа (bps)
STOP_LOSS_PCT=0.02          # 2% (доля, не проценты)
TAKE_PROFIT_PCT=0.03        # 3% (доля)

# Idempotency
IDEMPOTENCY_BUCKET_MS=5000  # окно схлопывания дублей
IDEMPOTENCY_TTL_SEC=300     # срок хранения ключа

# Лимиты частоты (мягкие)
RL_EVALUATE_PER_MIN=60
RL_ORDERS_PER_MIN=10

# Контроль рассинхрона времени
MAX_TIME_DRIFT_MS=2500
TIME_DRIFT_URLS=https://worldtimeapi.org/api/timezone/Etc/UTC,https://worldtimeapi.org/api/ip

# Telegram (опционально)
TELEGRAM_BOT_TOKEN=__PUT_TOKEN_HERE__
TELEGRAM_BOT_SECRET=__PUT_SECRET_HERE__  # раньше называлось TELEGRAM_WEBHOOK_SECRET

# Оркестратор / метрики (опционально)
TICK_PERIOD_SEC=60
PERF_BUDGET_FLOW_P99_MS=0
PERF_BUDGET_DECISION_P99_MS=0
PERF_BUDGET_ORDER_P99_MS=0

# Логи/прочее
LOG_LEVEL=INFO
LOG_JSON=false
DB_PATH=./data/trades.db
PUBLIC_BASE_URL=http://localhost:8000
TZ=Europe/Istanbul
