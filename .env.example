# ── Mode & Exchange ────────────────────────────────────────────────────────────
MODE=paper                        # paper | live
EXCHANGE=gateio
SYMBOLS=BTC/USDT,ETH/USDT
QUOTE_CURRENCY=USDT

# ── Trade Sizing ───────────────────────────────────────────────────────────────
FIXED_AMOUNT=50                   # $ per trade (paper/live)
MAX_PCT_PER_TRADE=0               # 0 = off

# ── Broker Credentials (live only) ────────────────────────────────────────────
API_KEY=
API_SECRET=
API_PASSWORD=

# ── Broker Throttle / Slippage Caps ───────────────────────────────────────────
BROKER_RPS=5
BROKER_BURST=10
RISK_MAX_SLIPPAGE_PCT=2.0         # ≤5%
SPREAD_CAP_PCT=5.0                # ≤5%

# ── Risk Limits (0 = off) ─────────────────────────────────────────────────────
RISK_MAX_DRAWDOWN_PCT_DAY=0
RISK_MAX_ORDERS_5M=0
RISK_MAX_TURNOVER_5M_USD=0
RISK_MIN_COOLDOWN_SEC=0
RISK_MAX_LOSS_STREAK=0
RISK_DAILY_LOSS_LIMIT_USD=0

# ── Regime Filter (macro gating) ──────────────────────────────────────────────
REGIME_ENABLED=1
REGIME_ALLOW_SELLS_IN_OFF=1
HTTP_DXY_URL=https://example/dxy
HTTP_BTC_DOM_URL=https://example/btc.d
HTTP_FOMC_URL=https://example/fomc

# ── App / HTTP API ────────────────────────────────────────────────────────────
API_TOKEN=change-me               # Bearer token для /orchestrator/*
HOST=0.0.0.0
PORT=8000

# ── Storage / Bus ─────────────────────────────────────────────────────────────
DATABASE_URL=sqlite:///./data/crypto_ai_bot.db
REDIS_URL=redis://redis:6379/0

# ── Observability ─────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
PROMETHEUS_ENABLE=1

# ── Dead Man’s Switch / Instance Lock ─────────────────────────────────────────
DMS_ENABLED=1
INSTANCE_LOCK_PATH=/tmp/crypto-bot.lock

# ── Telegram (publisher/bot) ──────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ADMINS=
TELEGRAM_OPERATORS=

# ── MTF/Fusion Weights (sum=1.0) ──────────────────────────────────────────────
MTF_W_M15=0.40
MTF_W_H1=0.25
MTF_W_H4=0.20
MTF_W_D1=0.10
MTF_W_W1=0.05
FUSION_W_TECH=0.65
FUSION_W_AI=0.35

# ── Secrets File Support (optional) ───────────────────────────────────────────
SECRETS_FILE=
