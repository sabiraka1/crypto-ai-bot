# --- Mode / broker ---
# MODE: paper | backtest | live
MODE=paper
EXCHANGE=ccxt          # ccxt/paper/backtest (фабрика выберет по MODE)

# --- Trading defaults ---
SYMBOL=BTC/USDT
TIMEFRAME=1h
POSITION_SIZE=0.01
ENABLE_TRADING=false        # в paper можно true, в live включай осознанно

# --- Risk ---
MAX_DRAWDOWN_PCT=0.20
STOP_LOSS_PCT=0.03
MAX_POSITIONS=1

# --- Time sync / drift ---
TIME_DRIFT_LIMIT_MS=1000
# Через запятую; можно оставить пустым — возьмём дефолты из utils/time_sync.py
TIME_DRIFT_URLS=

# --- Rate limits (по нашей спецификации) ---
RATE_LIMIT_ORDERS_PER_MINUTE=10
RATE_LIMIT_EVALUATE_PER_MINUTE=60
RATE_LIMIT_MARKET_CONTEXT_PER_HOUR=100

# --- Performance budgets (для метрик P99) ---
PERF_BUDGET_DECIDE_P99=0.50
PERF_BUDGET_ORDER_P99=1.00

# --- Storage / SQLite ---
DB_PATH=/data/bot.sqlite
SQLITE_VACUUM_THRESHOLD_MB=100
SQLITE_ANALYZE_ROWS_CHANGED=1000

# --- Orchestrator / metrics ---
METRICS_REFRESH_SEC=30

# --- Telegram ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_SECRET_TOKEN=
TELEGRAM_ALLOWLIST=        # опционально: comma-separated chat ids

# --- CCXT (пример gate.io) ---
EXCHANGE_NAME=gateio
GATEIO_API_KEY=
GATEIO_API_SECRET=
GATEIO_PASSWORD=

# --- Paths ---
DATA_DIR=/data
CHARTS_DIR=/data/charts
MODELS_DIR=/data/models
LOGS_DIR=/data/logs

TZ=Etc/UTC
