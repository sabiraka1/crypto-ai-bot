# ================== TRADING CONFIGURATION ==================

# Основные параметры торговли
SYMBOL=BTC/USDT
TIMEFRAME=15m
TRADE_AMOUNT=50

# ✅ ИСПРАВЛЕННЫЕ пороги входа (нормализованные 0-1)
MIN_SCORE_TO_BUY=0.65

# ✅ AI Gate - обязательная проверка AI модели
ENFORCE_AI_GATE=1
AI_MIN_TO_TRADE=0.70

# AI модель
AI_ENABLE=1
AI_FAILOVER_SCORE=0.55

# Риск-менеджмент
TAKE_PROFIT_PCT=1.5
STOP_LOSS_PCT=2.0

# RSI параметры
RSI_OVERBOUGHT=70
RSI_CRITICAL=90
RSI_CLOSE_CANDLES=5

# Временные интервалы
ANALYSIS_INTERVAL=15
INFO_LOG_INTERVAL_SEC=600
MARKET_REEVALUATION=4
POST_SALE_COOLDOWN=60

# ================== API CONFIGURATION ==================

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CHAT_ID=your_telegram_chat_id_here
ADMIN_CHAT_IDS=your_chat_id_here

# Gate.io API Configuration
GATE_API_KEY=your_gate_api_key_here
GATE_API_SECRET=your_gate_api_secret_here

# ================== SECURITY & WEBHOOKS ==================

# Webhook Configuration
PUBLIC_URL=https://your-app-name.railway.app
WEBHOOK_SECRET=your_random_webhook_secret_here
TELEGRAM_SECRET_TOKEN=your_telegram_secret_token_here

# ================== SAFETY & MODES ==================

# ✅ SAFE MODE для тестирования (виртуальные балансы)
SAFE_MODE=1

# Включение/отключение компонентов
ENABLE_WEBHOOK=1
ENABLE_TRADING=1

# ================== SERVER CONFIGURATION ==================

# Server Configuration
PORT=5000
FLASK_DEBUG=False

# System Configuration
PYTHON_VERSION=3.11.6
PYTHONUNBUFFERED=1
TZ=UTC
WEB_CONCURRENCY=1
LOG_LEVEL=INFO

# ================== ФАЙЛЫ И ПУТИ ==================

# CSV файлы для логирования
CLOSED_TRADES_CSV=closed_trades.csv
SIGNALS_CSV=signals_snapshots.csv

# ML модели
MODEL_DIR=models
MODELS_DIR=models

# ================== РАСШИРЕННЫЕ НАСТРОЙКИ ==================

# Позиционирование по AI Score
AI_POSITION_MODE=step
POSITION_MIN_FRACTION=0.30
POSITION_MAX_FRACTION=1.00

# Рыночные модификаторы
BULL_MARKET_MODIFIER=-0.20
BEAR_MARKET_MODIFIER=0.40
OVERHEATED_MODIFIER=0.30
VOLATILITY_THRESHOLD=5.0

# Команды - cooldown в секундах
COMMAND_COOLDOWN=3
TEST_TRADE_AMOUNT=3

# ================== ПРИМЕЧАНИЯ ==================

# SAFE_MODE=1: Виртуальная торговля, безопасно для тестов
# SAFE_MODE=0: Реальная торговля, ОСТОРОЖНО!

# ENFORCE_AI_GATE=1: Блокирует входы если AI score < AI_MIN_TO_TRADE
# MIN_SCORE_TO_BUY: Минимальный технический score для входа (0-1)
# AI_MIN_TO_TRADE: Минимальный AI score для входа (0-1)

# Railway/Render специфичные (опционально)
# RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com