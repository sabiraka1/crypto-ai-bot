# ===== Runtime mode =====
MODE=paper                # paper | live
SANDBOX=0                 # для live: 1=тестнет (если доступен), 0=прод

# ===== Exchange / Symbols =====
EXCHANGE=gateio
SYMBOL=BTC/USDT           # одиночный символ
# SYMBOLS=BTC/USDT,ETH/USDT  # мультисимвол (опционально; перекрывает SYMBOL)

# ===== Trade sizing =====
FIXED_AMOUNT=50           # покупка на сумму (в QUOTE) за один тик

# ===== Price feed for PAPER mode =====
PRICE_FEED=fixed          # fixed | live
FIXED_PRICE=100

# ===== Database / Migrations / Backups =====
DB_PATH=./data/trader-gateio-BTCUSDT-paper.sqlite3
BACKUP_RETENTION_DAYS=30

# ===== Idempotency =====
IDEMPOTENCY_BUCKET_MS=60000
IDEMPOTENCY_TTL_SEC=3600

# ===== Risk limits =====
RISK_COOLDOWN_SEC=60
RISK_MAX_SPREAD_PCT=0.3
RISK_MAX_POSITION_BASE=0.02
RISK_MAX_ORDERS_PER_HOUR=6
RISK_DAILY_LOSS_LIMIT_QUOTE=100

# ===== Orchestrator intervals (seconds) =====
EVAL_INTERVAL_SEC=60
EXITS_INTERVAL_SEC=5
RECONCILE_INTERVAL_SEC=60
WATCHDOG_INTERVAL_SEC=15
DMS_TIMEOUT_MS=120000

# ===== API / Security =====
API_TOKEN=                # запрет анонимных mgmt-эндпойнтов (если задан)
AUTO_START=0              # 1 = запускать оркестратор на старте

# ===== Exchange keys (LIVE only) =====
API_KEY=
API_SECRET=

# ===== Telegram (optional) =====
TELEGRAM_ENABLED=0
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=
