# ====== RUNTIME MODE ======
MODE=paper                 # paper | live | backtest

# ====== TRADING DEFAULTS ======
SYMBOL=BTC/USDT
TIMEFRAME=1h
ENABLE_TRADING=false       # в paper/live режимах включение фактических ордеров
PAPER_MODE=true            # для PaperExchange

# ====== BROKER (live, если понадобится) ======
EXCHANGE_ID=binance        # пример; см. ccxt
API_KEY=
API_SECRET=
API_PASSWORD=

# ====== STORAGE ======
DB_PATH=/data/bot.sqlite   # на Railway обязательно подключи Volume -> /data

# ====== RISK LIMITS ======
MAX_DRAWDOWN_PCT=0.2
STOP_LOSS_PCT=0.02
MAX_EXPOSURE=1.0
MAX_SEQ_LOSSES=3
TRADING_HOURS=*            # * = без ограничений

# ====== DECISION WEIGHTS / THRESHOLDS ======
SCORE_RULE_WEIGHT=0.5
SCORE_AI_WEIGHT=0.5
ENTRY_THRESHOLD=0.55
EXIT_THRESHOLD=0.45

# ====== METRICS / HEALTH ======
METRICS_REFRESH_SEC=30
TIME_DRIFT_LIMIT_MS=1000
# Можно оставить пустым — возьмутся дефолтные из utils/time_sync.py
TIME_DRIFT_URLS=

# ====== TELEGRAM (опционально) ======
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# ====== LOGGING ======
LOG_LEVEL=INFO
