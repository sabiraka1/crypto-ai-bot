# ================== TRADING CONFIGURATION ==================

# Основные параметры торговли
SYMBOL=BTC/USDT
TIMEFRAME=15m
TRADE_AMOUNT=50

# ✅ ИСПРАВЛЕННЫЕ пороги входа (нормализованные 0-1)
MIN_SCORE_TO_BUY=0.65

# ✅ AI Gate - обязательная проверка AI модели
ENFORCE_AI_GATE=1
AI_MIN_TO_TRADE=0.70

# AI модель
AI_ENABLE=1
AI_FAILOVER_SCORE=0.55

# Риск-менеджмент
TAKE_PROFIT_PCT=1.5
STOP_LOSS_PCT=2.0

# RSI параметры
RSI_OVERBOUGHT=70
RSI_CRITICAL=90
RSI_CLOSE_CANDLES=5

# Временные интервалы
API_REFRESH_INTERVAL=15
SIGNAL_CHECK_INTERVAL=15
TELEGRAM_UPDATE_INTERVAL=30

# ================== TELEGRAM CONFIG ==================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ================== GATE.IO API KEYS ==================
GATEIO_API_KEY=your_gateio_api_key_here
GATEIO_API_SECRET=your_gateio_api_secret_here

# ================== PERFORMANCE TRACKER ==================
PERFORMANCE_MAX_TRADES_HISTORY=500
PERFORMANCE_ALERT_LOW_WIN_RATE=0.35
PERFORMANCE_ALERT_HIGH_DRAWDOWN=0.15
PERFORMANCE_ALERT_NEGATIVE_SHARPE=0.0
PERFORMANCE_ALERT_CONSECUTIVE_LOSSES=5
PERFORMANCE_ALERT_POOR_RISK_REWARD=0.5
PERFORMANCE_AUTO_PAUSE=1  # 1 - включено, 0 - выключено
PERFORMANCE_PAUSE_MINUTES=60  # пауза при критических показателях

# ================== ADVANCED TRADING METRICS ==================
METRICS_RISK_FREE_RATE=0.02
METRICS_SORTINO_TARGET=0.0
METRICS_MAX_DRAWDOWN_ALERT=0.20
METRICS_SHARPE_ALERT=0.0
METRICS_CALMAR_ALERT=0.5
METRICS_KELLY_MAX=0.25
METRICS_MIN_EXPECTANCY=0.05

# ================== ALERTS & LOGGING ==================
ENABLE_TELEGRAM_ALERTS=1
ENABLE_FILE_LOGS=1
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# ================== BACKTEST & TRAINING ==================
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
AI_MODEL_PATH=models/signal_model.pkl
TRAIN_ON_EACH_CLOSE=1

# ================== OTHER SETTINGS ==================
USE_TRAILING_STOP=1
TRAILING_STOP_ATR_MULTIPLIER=1.5
